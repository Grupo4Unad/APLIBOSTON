<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|clip_vertical|center_horizontal"
        android:hapticFeedbackEnabled="false"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="91dp"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/logo_cole_boston" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginRight="56dp"
            android:text="Sesion de Estudiantes"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info_notas"
            android:layout_width="272dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Para consultar y revisar sus notas puedes dar click en el siguiente botón:" />

        <Button
            android:id="@+id/boton_notas"
            android:layout_width="200dp"
            android:layout_height="36dp"
            android:background="#3F51B5"
            android:text="Notas"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/info_Guias"
            android:layout_width="272dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Para revisar sus guías de actividades debes dar click en el siguiente botón: " />

        <Button
            android:id="@+id/btn_guias"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="#3F51B5"
            android:layout_marginTop="10dp"
            android:text="Guías de Actividades"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="18sp" />
        <Button
            android:id="@+id/contactar_profe"
            android:layout_width="200dp"
            android:background="#3F51B5"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Contactar profesor"
            tools:ignore="MissingConstraints" />
        <Button
            android:id="@+id/calificar"
            android:layout_width="200dp"
            android:background="#3F51B5"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="calificar app"

            tools:ignore="MissingConstraints,OnClick" />

        <Button
            android:id="@+id/btn_noticias"
            android:layout_width="200dp"
            android:background="#3F51B5"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Noticias"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>